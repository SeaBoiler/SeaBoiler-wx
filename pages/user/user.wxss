.image {
  margin-top: 30rpx;
  display: flex;
  width: 100%;
  height: 500rpx;
}
.icon {
  width: 50rpx;
  height: 50rpx;
  margin-top: 50rpx;
}
.head {
  position: relative;
  top: 50%;
  height: 300px;
  margin-top: -25px;
  display: flex;
}
.cover {
  flex: 1;
  height: 100%;
}
.text{
  font-size: 28rpx;
  color: #999999;
  margin-bottom: 10rpx;
  align-items: center;
  padding-left: 30rpx;
  padding-right: 30rpx;
  flex: 1;
}
.flex{
  display:flex;
}
.navigator {
  padding: 20rpx 30rpx;
  position: relative;
  display: flex;
  align-items: center;
}
.navigator-arrow {
  padding-right: 26rpx;
  position: relative;
}
.navigator-arrow:after {
  content: " ";
  display: inline-block;
  height: 18rpx;
  width: 18rpx;
  border-width: 2rpx 2rpx 0 0;
  border-color: #888888;
  border-style: solid;
  transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
  position: absolute;
  top: 50%;
  margin-top: -8rpx;
  right: 28rpx;
}
.switch {
  padding-top: 6px;
  padding-bottom: 6px;
}

