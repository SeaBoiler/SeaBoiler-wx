.body {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  background: black;
}
.container {
  position: fixed;
  width: 100vw;
  height: calc(100vw + 200rpx);
  top: calc(50vh - 50vw - 100rpx);
}

image.random {
  width: 100vw;
  height: 100vw;
  background-image: url("https://unsplash.6-79.cn/random/small")
}

text.title {
  position: absolute;
  top: 40rpx;
  left: 0;
  height: 40rpx;
  line-height: 40rpx;
  vertical-align: middle;
  text-align: center;
  background: black;
  font-size: 30rpx;
  color: white;
  padding: 0 20rpx;
  opacity: 0.7;
}

view.owner {
  position: absolute;
  top: 100rpx;
  background: black;
  padding: 0 20rpx;
  opacity: 0.7;
}

view.owner text {
  display: inline-block;
  font-size: 30rpx;
  color: white;
}

view.owner text.name {
  font-weight: bold;
}

view.owner image.avatar {
  display: inline-block;
  width: 28rpx;
  height: 28rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 28rpx;
  margin: 5rpx 5rpx 0;
  background-image: url("https://unsplash.6-79.cn/random/small");
}

view.footer {
  position: absolute;
  height: 100px;
  top: 100vw;
  width: 100vw;
}

view.footer view.info {
  position: absolute;
  right: 20rpx;
  height: 100%;
  top: 30rpx;
}

view.footer view.info text {
  position: absolute;
  right: 0;
  width: max-content;
}

view.footer view.info text.music-name {
  font-size: 40rpx;
  color: white;
}

view.footer view.info text.singer {
  top: 50rpx;
  font-size: 30rpx;
  color: gray;
}

view.footer view.btn-box {
  position: absolute;
  left: 20rpx;
  top: 30rpx;
  border: 1px solid black;
  border-radius: 80rpx;
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0.5;
  background: white;
}
view.footer image.btn {
  width: 40rpx;
  height: 40rpx;
}
